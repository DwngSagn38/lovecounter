<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.HomeFragment">

   <ImageView
       android:id="@+id/imgBackground"
       android:layout_width="match_parent"
       android:layout_height="369dp"
       android:src="@drawable/img_home"
       android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_home1"
        android:layout_marginTop="316dp"
        android:scaleType="fitXY"/>
    
    <ImageView
        android:id="@+id/imgCouple"
        android:layout_width="260dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_coupon"
        android:layout_marginTop="230dp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="47dp">

        <ImageView
            android:id="@+id/imgSetting"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_setting"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/imgPicture"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_picture"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:layout_marginTop="454dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llSetMale"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/imgMale"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/img_male"
                android:background="@drawable/circle_image"
                android:scaleType="centerCrop"
                android:clipToOutline="true"/>
            <TextView
                android:id="@+id/txtNameMale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textFontWeight="600"
                android:fontFamily="@font/plusjakartasans"
                android:textAlignment="center"
                android:textColor="#4B4F58"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/icMale"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_male"/>

                <TextView
                    android:id="@+id/txtAgeMale"
                    android:layout_width="41dp"
                    android:layout_height="18dp"
                    android:text="18"
                    android:textSize="14sp"
                    android:textFontWeight="600"
                    android:fontFamily="@font/plusjakartasans"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnStar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="72dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_heart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/plusjakartasans"
                android:text="0 \n Day"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textFontWeight="600"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtTap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plusjakartasans"
                android:text="@string/tap_to_start_date"
                android:textAlignment="center"
                android:textFontWeight="400"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/llSetFemale"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/imgFemale"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/img_female"
                android:background="@drawable/circle_image"
                android:scaleType="centerCrop"
                android:clipToOutline="true"/>
            <TextView
                android:id="@+id/txtNameFemale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textFontWeight="600"
                android:fontFamily="@font/plusjakartasans"
                android:textAlignment="center"
                android:textColor="#4B4F58"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/icFemale"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_female"/>

                <TextView
                    android:id="@+id/txtAgeFemale"
                    android:layout_width="41dp"
                    android:layout_height="18dp"
                    android:text="18"
                    android:textSize="14sp"
                    android:textFontWeight="600"
                    android:fontFamily="@font/plusjakartasans"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
</FrameLayout>